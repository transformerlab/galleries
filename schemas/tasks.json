{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "description": { "type": "string" },
            "tag": { "type": "string" },
            "title": { "type": "string" },
            "github_repo_url": { "type": "string", "format": "uri" },
            "github_repo_dir": { "type": "string" },
            "config": {
                "type": "object",
                "properties": {
                    "name": { "type": "string" },
                    "cluster_name": { "type": "string" },
                    "command": { "type": "string" },
                    "cpus": { "type": "string" },
                    "accelerators": { "type": "string" },
                    "gpus": { "type": "string" },
                    "memory": { "type": "string" },
                    "setup": { "type": "string" }
                },
                "required": [
                    "name",
                    "cluster_name",
                    "command",
                    "cpus",
                    "memory",
                    "setup"
                ],
                "additionalProperties": false
            }
        },
        "required": [
            "description"
        ],
        "additionalProperties": true
    }
}


